
{
  "manifest_version": 2,
  "name": "TapGPT",
  "version": "1.0",
  "description": "A Chrome extension that provides answers to all questions on the current activetab.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "web_accessible_resources": [
    "popup.html",
    "popup.js",
    "popup.css"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "TapGPT"
  }
}
